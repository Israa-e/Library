<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardlibrary"
            android:foreground="@drawable/edittext"
            android:clickable="true"
            android:layout_width="160dp"
            android:layout_height="170dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/ic_baseline_view_list_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:text="Library"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardfavorite"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:foreground="@drawable/edittext"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="4000dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_favorite_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:text="Favorites"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardaddnewbook"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:foreground="@drawable/edittext"
            android:clickable="true"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="10dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_note_add_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:text="Create Book"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardcreatecategory"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:foreground="@drawable/edittext"
            android:clickable="true"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="4000dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:alpha="1"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_category_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="125dp"
                android:text="Create Category"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>





