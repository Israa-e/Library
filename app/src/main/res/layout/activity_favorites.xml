<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favorites">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview_favorites"
        />
    <ImageView
        android:id="@+id/empty_imageView_fav"
        android:layout_width="82dp"
        android:layout_height="81dp"
        android:layout_marginTop="240dp"
        android:alpha="0.1"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_hourglass_empty_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerview_favorites" />

    <TextView
        android:id="@+id/no_data_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="No Favorites"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:alpha="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_imageView_fav" />

</androidx.constraintlayout.widget.ConstraintLayout>